    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>myGit.Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadXmlServlet</servlet-name>
        <servlet-class>myGit.Servlets.LoadXmlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SystemHandler</servlet-name>
        <servlet-class>myGit.Servlets.SystemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForkRepository</servlet-name>
        <servlet-class>myGit.Servlets.ForkRepositoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefreshData</servlet-name>
        <servlet-class>myGit.Servlets.RefreshDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadXmlServlet</servlet-name>
        <url-pattern>/loadXml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForkRepository</servlet-name>
        <url-pattern>/fork</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefreshData</servlet-name>
        <url-pattern>/refreshData</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemHandler</servlet-name>
        <url-pattern>/loadSystem</url-pattern>
    </servlet-mapping>

